    <div class="container">

      <div class="page-header" id="banner">
        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="type"><%= @data["date"] %> <%= @data["name"] %></h1>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-6">
            <div class="panel panel-warning">
              <div class="panel-heading">
                <h3 class="panel-title">Likes</h3>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-hover ">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Category</th>
                      <th>Name</th>
                      <th>%</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% rank_num = 0 %>
                  <% @data["likeranking"].each do |rank| %>
                    <% rank_num += 1%>
                    <% if rank_num == 1 %>
                      <tr class="warning">
                    <% else %>
                      <tr>
                    <% end %>
                      <td><%= rank_num %></td>
                      <% if rank["category"] == 0 %>
                        <td>Alcohols</td>
                      <% elsif rank["category"] == 1 %>
                        <td>Meats</td>
                      <% elsif rank["category"] == 2 %>
                        <td>Fishes</td>
                      <% elsif rank["category"] == 3 %>
                        <td>Vegetables</td>
                      <% else %>
                        <td>Carbohydrates</td>
                      <% end %>
                      <td><%= rank["food"] %></td>
                      <td><%= rank["percentage"] %>%</td>
                    </tr>
                  <% end %>
                  </tbody>
                </table> 
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title">Unlikes</h3>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-hover ">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Category</th>
                      <th>Name</th>
                      <th>%</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% rank_num = 0 %>
                  <% @data["unlikeranking"].each do |rank| %>
                    <% rank_num += 1%>
                    <% if rank_num == 1 %>
                      <tr class="info">
                    <% else %>
                      <tr>
                    <% end %>
                      <td><%= rank_num %></td>
                      <% if rank["category"] == 0 %>
                        <td>Alcohols</td>
                      <% elsif rank["category"] == 1 %>
                        <td>Meats</td>
                      <% elsif rank["category"] == 2 %>
                        <td>Fishes</td>
                      <% elsif rank["category"] == 3 %>
                        <td>Vegetables</td>
                      <% else %>
                        <td>Carbohydrates</td>
                      <% end %>
                      <td><%= rank["food"] %></td>
                      <td><%= rank["percentage"] %>%</td>
                    </tr>
                  <% end %>
                  </tbody>
                </table> 
              </div>
            </div>
          </div>
        </div>
      </div>
